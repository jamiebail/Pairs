<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@layout/backrepeat"
    android:orientation="vertical"

    android:weightSum="10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#303030"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.75"
            android:orientation="vertical"

            android:weightSum="3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="19dp"
                    android:layout_height="23dp"
                    android:gravity="center"
                    app:srcCompat="@drawable/clock3" />

                <TextView
                    android:id="@+id/timertextview"
                    android:layout_width="0dp"
                    android:layout_height="23dp"
                    android:layout_weight="0.55"
                    android:gravity="center"
                    android:text="0:00"
                    android:textColor="@android:color/holo_orange_light"
                    android:textSize="18dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="19dp"
                    android:layout_height="23dp"
                    android:gravity="center"
                    app:srcCompat="@drawable/stard" />

                <TextView
                    android:id="@+id/multiplierCountdown"
                    android:layout_width="0dp"
                    android:layout_height="23dp"
                    android:layout_weight="0.55"
                    android:gravity="center"
                    android:text="0:00"
                    android:textColor="@color/colorAccent"
                    android:textSize="18dp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="3">


            <ImageView
                android:id="@+id/multiplierStar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:padding="10dp"
                app:srcCompat="@drawable/starnew" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.51"
            android:orientation="vertical"
            android:weightSum="2">

            <TextView
                android:id="@+id/highscoretextview"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0"
                android:textColor="@android:color/holo_orange_light"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/pointstextview"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.81"
                android:gravity="center"
                android:text="0"

                android:textColor="@color/colorAccent"
                android:textSize="18dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.17"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="20dp"
                android:layout_height="25dp"
                android:layout_weight="0.03"
                app:srcCompat="@drawable/crown" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="20dp"
                android:layout_height="25dp"
                android:layout_weight="0.05"
                app:srcCompat="@drawable/pig" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:background="#686868"
        android:weightSum="3"
        android:id="@+id/notifierBar">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:id="@+id/backbutton"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="0.75">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:background="@drawable/leftar2" />

        </LinearLayout>


        <TextView
            android:text="@string/initialpuzzletext"
            android:layout_width="0dp"
            android:gravity="center"
            android:textSize="18dp"
            android:id="@+id/textView2"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:elevation="1dp"
            android:textColor="@android:color/white" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/reloadbutton"
            android:layout_weight="0.75">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@drawable/reload" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_weight="7.2"
        android:layout_height="0dp"


        >

        <GridView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:verticalSpacing="8dp"
            android:paddingTop="10dp"
            android:id="@+id/gridview"
            android:gravity="center"
            android:stretchMode="columnWidth"
            android:layout_alignBottom="@+id/multiplierStar"></GridView>
    </LinearLayout>


</LinearLayout>