<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@layout/backrepeat"
    android:gravity="center"
    android:weightSum="10"
    android:orientation="horizontal">

    <FrameLayout
        android:id="@+id/puzzleListFrame"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="@layout/landscaperepeat">

    </FrameLayout>

    <View
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:background="@layout/leatherrepeat"/>
<LinearLayout
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="6"
    android:orientation="vertical"
    android:weightSum="10">
    <TextView
        android:text="@string/initialpuzzletext"
        android:layout_width="match_parent"
        android:gravity="center"
        android:textSize="18dp"
        android:id="@+id/textView3"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:elevation="1dp"
        android:textColor="@android:color/white" />
    <GridView
        android:layout_width="match_parent"
        android:layout_weight="9"
        android:layout_height="0dp"
        android:verticalSpacing="8dp"
        android:horizontalSpacing="1dp"
        android:paddingTop="5dp"
        android:id="@+id/gridview"
        android:gravity="center"
        android:stretchMode="columnWidth"/>
</LinearLayout>
    <View
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:background="@layout/leatherrepeat"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@layout/landscaperepeat"
        android:layout_weight="2"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="4"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:layout_height="23dp"
                    android:gravity="center"
                    app:srcCompat="@drawable/clock3" />

                <TextView
                    android:id="@+id/timertextview"
                    android:layout_width="0dp"
                    android:layout_height="23dp"
                    android:layout_weight="0.55"
                    android:gravity="left"
                    android:text="0:00"
                    android:textColor="@android:color/holo_orange_light"
                    android:textSize="18dp" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:layout_height="23dp"
                    android:gravity="center"
                    app:srcCompat="@drawable/stard" />

                <TextView
                    android:id="@+id/multiplierCountdown"
                    android:layout_width="0dp"
                    android:layout_height="23dp"
                    android:layout_weight="0.55"
                    android:gravity="left"
                    android:text="0:00"
                    android:textColor="@color/colorAccent"
                    android:textSize="18dp" />

            </LinearLayout>

        </LinearLayout>

        <ImageView
                app:srcCompat="@drawable/starnew"
                android:id="@+id/multiplierStar"
                android:layout_width="99dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:padding="10dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="2">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="20dp"
                android:layout_height="25dp"
                android:layout_weight="0.03"
                app:srcCompat="@drawable/pig" />


            <TextView
                android:text="0"
                android:id="@+id/pointstextview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="@color/colorAccent" />




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="2">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="20dp"
                android:layout_height="25dp"
                android:layout_weight="0.03"
                app:srcCompat="@drawable/crown" />

            <TextView
                android:id="@+id/highscoretextview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0"
                android:textColor="@android:color/holo_orange_light"
                android:textSize="18dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="0.86"
        android:background="?attr/colorButtonNormal"
        android:weightSum="3" >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:id="@+id/backbutton"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="0.75">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:background="@drawable/leftar2" />

        </LinearLayout>


        <TextView
            android:text="@string/initialpuzzletext"
            android:layout_width="0dp"
            android:gravity="center"
            android:textSize="18dp"
            android:id="@+id/textView2"
            android:background="?attr/colorButtonNormal"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:elevation="1dp"
            android:textColor="@android:color/white" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/reloadbutton"
            android:layout_weight="0.75">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@drawable/reload" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="0dp"
        android:weightSum="3"

        >

    </LinearLayout>


</LinearLayout>